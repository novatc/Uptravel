<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Uptravel" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_NCS</item>
        <item name="colorPrimaryVariant">@color/rich_black_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/cornfield_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_NCS</item>
        <item name="colorSecondaryVariant">@color/rich_black_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Uptravel.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="CustomToolbarStyle">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:colorControlNormal">#FFFFFF</item>
    </style>
</resources>